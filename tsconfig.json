{
    "compilerOptions": {
        "esModuleInterop": true,
        "skipLibCheck": true,
        "target": "es2022",
        "allowJs": true,
        "resolveJsonModule": true,
        "moduleDetection": "force",
        "isolatedModules": true,
        "verbatimModuleSyntax": true,  
        "strict": true,
        "noUncheckedIndexedAccess": true,
        "noImplicitOverride": true,
        "outDir": "dist",
        "sourceMap": true,
        "declaration": true,
        "composite": true,
        "declarationMap": true,
        "module": "preserve",
        "noEmit": true,
        "lib": ["es2022"],
        "noImplicitAny": false
    }
}